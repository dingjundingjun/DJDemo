<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    tools:context=".MainActivity" >
    <ScrollView 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        >
        <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:orientation="vertical"
            >
<Button 
    android:id="@+id/shut_down_dialog"
    android:text="@string/shut_down_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
<Button
    android:id="@+id/shut_down_dialog_M1000"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/shut_down_dialog_M1000"
    />
<TextView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/system_dialog"
    />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <Button 
        android:id="@+id/normal_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="普通对话框"
        />
    <Button 
        android:id="@+id/two_normal_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="两个按钮的普通对话框"
        />
    <Button 
        android:id="@+id/three_normal_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="三个按钮的普通对话框"
        />
    <Button 
        android:id="@+id/mult_btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="多按钮对话框"
        />
    <Button 
        android:id="@+id/list_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="列表对话框"
        />
    <Button 
        android:id="@+id/single_choose_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="单选对话框"
        />
    <Button 
        android:id="@+id/mult_choose_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="多选对话框"
        />
    <Button 
        android:id="@+id/progress_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="进度对话框"
        />
    <Button 
        android:id="@+id/showProcess_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="显示进度对话框"
        />
    <Button 
        android:id="@+id/show_forget_password_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="忘记密码对话框"
        />
    <Button 
        android:id="@+id/showFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="显示所有字库"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:background="@drawable/dialog_full_holo_light"
    android:divider="@drawable/alertdialog_devider"
    android:dividerPadding="20dip"
    android:gravity="bottom"
    android:paddingStart="5dip"
    android:paddingEnd="5dip"
    android:paddingBottom="5dip"
    >
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="button1"
        android:textColor="@drawable/test_color"
        android:enabled="false"
        />
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="button2"
        />
    <Button 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="button3"
        />
    </LinearLayout>
    <SeekBar 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="9dip" 
    android:maxHeight="9dip"
    android:progressDrawable="@drawable/seekbar"
    android:thumb="@drawable/volumn_seek_item"
    />
    
    <ScrollView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
    <com.example.utils.DJTextView 
        android:id="@+id/test_str"
        android:layout_width="match_parent"
        android:layout_height="500dip"
        />
    </ScrollView>
    <EditText 
        android:id="@+id/edit_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone" 
        android:singleLine="true"
        />
    <EditText 
        android:id="@+id/edit_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:singleLine="true"
        />
    <EditText 
        android:id="@+id/edit_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:imeOptions="actionDone"
        />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
