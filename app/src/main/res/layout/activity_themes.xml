<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/keyguard_theme_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/update_zip"
        android:layout_width="104px"
        android:layout_height="104px"
        />
    <Button
        android:id="@+id/update_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/studyos_icon"
        android:textSize="30dp"
        android:text="替换桌面壁纸"/>
    <Button
        android:id="@+id/update_keyguard_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="替换锁屏壁纸"/>
    <Button
        android:id="@+id/update_ringtone_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="设置信息铃声"/>
    <Button
        android:id="@+id/update_ringtone_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置通话铃声"/>
    <Button
        android:id="@+id/update_ringtone_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置闹铃"/>
    <Button
        android:id="@+id/update_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置字体"/>
    <Button
        android:id="@+id/reset_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重置字体"/>
    <Button
        android:id="@+id/update_launcher_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="替换桌面图标"/>
    <Button
        android:id="@+id/test_icon_xml_parse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试图标"/>
    <Button
        android:id="@+id/test_read_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除主题图标"
        />
    <Button
        android:id="@+id/zhangku_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="掌酷锁屏加载"/>
        <Button
            android:id="@+id/reset_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重置主题"/>
    <ListView
        android:id="@+id/icon_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>